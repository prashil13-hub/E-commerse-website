
<%- include("../partials/header")  %>  
<%- include("../partials/navbar")  %>    

    <link rel="stylesheet" href="/css/index.css">


    <main class="container">

        <%- include("../partials/flash")  %>      

        <section class="mt-3 mb-3">
            <h4 class="display-4 heading"><i class="fas fa-shopping-cart" style="margin-right: 20px;"></i>Shopping-Cart</h4>
        </section>

        <div class="row products " >
            <%for(let product of products){%>
                <div class="col-lg-3 col-md-6 col-sm-12" >
                    <div class="card text-center" style="width: 18rem;" >
                        <img style="object-fit: cover;" src="<%= product.img %> " class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= product.name %></h5>
                          <p class="card-text"><%= product.desc.substring(0,90) %>...</p>
                          <a href="/products/<%= product._id %> " class="btn btn-outline-primary">More Info</a>
                        </div>
                      </div>
                </div>
            <%}%>
        </div>


<!-- ******************************Featured Section************************************************ -->

    <section class="feature" id="feature">
        <h1 class="heading"><span>Featured Product</span></h1>

            <div class="row ">
                <div class="image-container">
    
                    <div class="big-image">
                        <img src="/assets/watch1.jpg" alt="xx">
                    </div>
    
                    <div class="small-image">
                        <img class="image-active" src="/assets/watch1.jpg" alt="">
                        <img  src="/assets/watch2.jpg" alt="">
                        <img  src="/assets/watch3.jpg" alt="">
                        <img  src="/assets/watch4.jpg" alt="">
                    </div>
    
                </div>
                    
                <div class="content">
    
                    <h3>Smart Watches</h3>
                    <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <span>(500+) reviews</span>
                    </div>
                    <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Similique ut nisi praesentiumvoluptate</p>
                    <strong class="price">₹1000 <span>₹1500</span> </strong>
                    <a href="#"><button class="btn">Buy now</button></a>
    
                </div>

            </div>

            

        </div>

    </section>



<!--  **********************************Gallery Section**************************************** -->
         <section class="gallery" id="gallery">

            <h1 class="heading"><span>Product Gallery</span></h1>

            <ul class="controls">
                <li class="btn button-active" data-filter="all">All</li>
                <li class="btn" data-filter="laptop">Laptop</li>
                <li class="btn" data-filter="watch">Watches</li>
                <li class="btn" data-filter="headphone">Headphone</li>
                <li class="btn" data-filter="mobile">Mobile</li>
            </ul>

            <div class="image-container">
                
                <% for(let product of galleryProducts){ %>
                    
                    <div class="box <%= product.productName.toLocaleLowerCase() %>  ">
                        <div class="image">
                            <img style="object-fit: cover;" src="<%= product.img %> " alt="">
                        </div>
                        <div class="info">
                            <h3><%= product.name %> </h3>
                            <div class="subInfo">
                                <strong class="price"><%= product.price %></strong>
                                
                                <!-- <div class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half"></i>
                                </div> -->

                                <a href="/products/<%= product._id %>" class="viewProduct" >View Product</a>

                            </div>
                        </div>
                    </div>

                <% } %> 

            </div>

        </section> 

    </main>










    <script src="/js/index.js"></script>


<%- include("../partials/footer")  %> 

